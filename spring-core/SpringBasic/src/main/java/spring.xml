<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="SourceAccount" class="org.javabrains.bank.AccountDetails">
		<property name="accountNumber" value="539471" />
		<property name="accountType" value="Savings" />
		<property name="lastTransactionDate" value="2014-05-11" />
		<property name="accountBalance" value="9990" />
	</bean>

	<bean id="DestinationAccount" class="org.javabrains.bank.AccountDetails">
		<constructor-arg index="0" value="540854" />
		<constructor-arg index="1" value="Current" />
		<constructor-arg index="2" value="10000" />
		<constructor-arg index="3" value="2015-01-01" />
	</bean>

</beans>
